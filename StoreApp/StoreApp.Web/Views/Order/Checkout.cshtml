@model OrderModel
            <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<h1 class="mb-3"><i class="bi bi-geo-alt"></i> Adres Bilgileri</h1>

<hr>
<div class="row">
    <div class="col-md-8">
        <h4 class="mb-3"><i class="bi bi-forward"></i> Sipariş Detayı</h4>
        <div asp-validation-summary="All" class="text-danger"></div>
        <form method="post" asp-action="Checkout">
            <div class="mb-3">
                <label asp-for="@Model.Name"></label>
                <input asp-for="@Model.Name" class="form-control">
            </div>
            <div class="row">
                <div class="col">
                     <label asp-for="@Model.City"></label>
                     <input asp-for="@Model.City" class="form-control">
                </div>
               <div class="col">
                     <label asp-for="@Model.Phone"></label>
                     <input asp-for="@Model.Phone" class="form-control">
                </div>
                <div class="col">
                     <label asp-for="@Model.Email"></label>
                     <input asp-for="@Model.Email" class="form-control">
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.AddressLine"></label>
                <textarea asp-for="@Model.AddressLine" class="form-control"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

<h1 class="mb-3" style="padding-top: 30px;">
    <i class="bi bi-credit-card-2-front"></i> Kart Bilgileri
</h1>

<input class="form-control form-control-lg" type="text" placeholder="Kart Üzerindeki İsim" aria-label=".form-control-lg example">
<input class="form-control" type="text" placeholder="Kart Numarası" aria-label="default input example">
<input class="form-control form-control-sm" type="date" placeholder="Son Kullanma Tarihi" aria-label=".form-control-sm example">
<input class="form-control form-control-sm" type="text" placeholder="CVV" aria-label=".form-control-sm example">

    

        
    </div>
    

    
    <div class="col-md-4">
        <h4 class="mb-3"><i class="bi bi-pencil-square"></i> Sipariş Özeti</h4>
        <ul class="list-group" mb-3>
            @foreach(var item in Model.Cart.Items)
            {
                <li class="list-group-item d-flex justify-content-between">
                    <div>
                        <h6>@item.Product.Name x @item.Quantity</h6> 
                    </div>
                    <span>@item.Product.Price.ToString("c")</span>
                </li>
            }
            <li class="list-group-item d-flex justify-content-between">
                <span>Toplam: </span>
                <strong>@Model.Cart.CalculateTotal().ToString("c")</strong>
            </li>
        </ul>
    </div>
</div>

<style>
    /* Sayfa arka planını değiştiren stil */
    body {
        background-color: #F1F0E8; /* Bej arka plan rengi */
        color: #333; /* Metin rengi */
        margin: 0;
        padding: 0;
    }

    h1, h4 {
        color: #555; /* Başlık renkleri */
    }

    .btn-primary {
        background-color: #89A8B2;
        border-color: #89A8B2;
    }

/* Her input alanı arasında mesafe ekleme */
        input {
    margin-bottom: 15px; /* Her input arasına 15px mesafe ekler */
}

/* CVV ve Son Kullanma Tarihi alanlarını daha küçük yapma */
        input[type="date"], input[placeholder="CVV"] {
    font-size: 0.875rem; /* Daha küçük yazı boyutu */
    padding: 0.5rem; /* Daha küçük iç padding */
}

    .btn-primary:hover {
        background-color: #607d8b;
        border-color: #607d8b;
    }

    .list-group-item {
        background-color: #FFFBEA; /* Sipariş özeti arka planı */
        color: #333;
    }
</style>
